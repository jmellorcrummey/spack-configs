#!/bin/sh

#------------------------------------------------------------
# miniconfig:
#
#  a script source'd from minitest to set its environment
#	This file should never be committed to git
#------------------------------------------------------------
TOPDIR=~/gits/spack-configs/TEST

# the lists of subdirectories below include all that are possible
#
#  CPUDIRS contain all the tests that are pure CPU users, no GPU
CPUDIRS=( \
 	cpu/cpu.gcc \
 	cpu/cpu.llvm \
 	nvidia/nogpu.gcc \
 	nvidia/nogpu.llvm \
 	)

#  NVIDIADIRS contain all the tests that run on nvidia GPUs
NVIDIADIRS=( \
	nvidia/copy.gcc \
	nvidia/copy.llvm \
	nvidia/cuda.gcc \
	nvidia/cuda.llvm \
	nvidia/omp.gcc \
	nvidia/omp.llvm \
	)

#  ROCMDIRS contain all the tests that run on AMD/ROCM GPUs
ROCMDIRS=( \
	rocm/hip.llvm \
	rocm/omp/copy.amdclang++ \
	rocm/omp/copy.hipcc \
	rocm/omp/gputest.amdclang++ \
	rocmtest/MatrixMult \
	)

# RUNDIRS is composed of the sets relevant to a particular machine
RUNDIRS=(${CPUDIRS[*]} ${NVIDIADIRS[*]})

